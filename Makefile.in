CC=@CC@
BINDIR=@exedir@
MANDIR=@mandir@

OBJS=pstree.o ptree.o version.o
PGM=pstree

all: $(PGM)

install: $(PGM)
	@INSTALL_PROGRAM@ $(PGM) $(BINDIR)

install.man:
	@INSTALL_DIR@ $(MANDIR)/man1
	@INSTALL_DATA@ pstree.1 $(MANDIR)/man1

pstree: $(OBJS)
	$(CC) -o pstree $(OBJS)

version.o: VERSION
	echo 'char version[] = VERSION;' > version.c
	$(CC) -DVERSION=\"`cat VERSION`\" -c version.c

clean:
	rm -f pstree *.o
